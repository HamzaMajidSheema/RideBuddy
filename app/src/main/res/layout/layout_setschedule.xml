<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter the Arival Location"
        android:id="@+id/ed_arrival"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter the destination Location"
        android:id="@+id/ed_final"/>

    <fragment
        android:id="@+id/map1"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="395dp"
        android:layout_height="210dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/datePickerDialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Date "
            />

        <Button
            android:id="@+id/timePickerDialogButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text=" Start Time" />

        <Button
            android:id="@+id/btn_endTime"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text=" End Time" />
        <Button
            android:id="@+id/btn_submitSchdule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit Schdule" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/sp_no_days"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:entries="@array/no_of_days"></Spinner>
    </LinearLayout>

    <TextView
        android:id="@+id/datePickerValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timePickerValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/timePickerValue2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold" />



    </LinearLayout>